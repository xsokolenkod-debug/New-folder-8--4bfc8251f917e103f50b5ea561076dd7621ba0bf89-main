<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.study.client.controller.DashboardController"
            styleClass="root"
            stylesheets="@/css/style.css">

    <!-- ВЕРХНЯЯ ПАНЕЛЬ -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 15;" styleClass="card">
            <ImageView fitHeight="40" fitWidth="40">
                <image><Image url="@/images/logo.png" /></image>
            </ImageView>
            <Label styleClass="title" text="COLLABORATIVE STUDY PLATFORM" />

            <!-- ВАЖНО: fx:id ДОЛЖЕН быть ровно welcomeLabel -->
            <Label fx:id="welcomeLabel"
                   style="-fx-font-size: 16px; -fx-text-fill: #333;"
                   text=""/>
            <Region HBox.hgrow="ALWAYS" />
            <Button styleClass="btn-primary" text="Odhlásiť sa" />
        </HBox>
    </top>

    <!-- ЛЕВОЕ МЕНЮ -->
    <left>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Кнопки меню с обработчиками -->
            <Button fx:id="tasksButton"
                    styleClass="sidebar-button"
                    text="Úlohy"
                    onAction="#onTasksClicked"/>

            <Button fx:id="messagesButton"
                    styleClass="sidebar-button"
                    text="Spravy"
                    onAction="#onMessagesClicked"/>

            <Button fx:id="groupsButton"
                    styleClass="sidebar-button"
                    text="Moje skupiny"
                    onAction="#onGroupsClicked"/>

            <Button fx:id="profileButton"
                    styleClass="sidebar-button"
                    text="Môj profil"
                    onAction="#onProfileClicked"/>

            <Button fx:id="statsButton"
                    styleClass="sidebar-button"
                    text="Štatistika"
                    onAction="#onStatsClicked"/>
        </VBox>
    </left>

    <!-- ЦЕНТРАЛЬНАЯ ОБЛАСТЬ, КУДА ГРУЗИМ FXML -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #1E90FF;"/>
    </center>

</BorderPane>